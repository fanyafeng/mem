<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.setpassword.SetPasswordActivity">

    <TextView
        android:id="@+id/loginTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="107dp"
        android:text="请设置密码"
        android:textColor="@color/black"
        android:textSize="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/loginOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="至少六位字符"
        android:textColor="#979797"
        android:textSize="17dp"
        app:layout_constraintLeft_toLeftOf="@+id/loginTitle"
        app:layout_constraintTop_toBottomOf="@+id/loginTitle" />


    <TextView
        android:id="@+id/loginNum"
        android:layout_width="wrap_content"
        android:layout_height="57dp"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical"
        android:text="密码"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="@+id/loginOne"
        app:layout_constraintTop_toBottomOf="@+id/loginOne" />

    <EditText
        android:id="@+id/loginNumInput"
        android:layout_width="0dp"
        android:layout_height="57dp"
        android:layout_marginLeft="124dp"
        android:layout_marginTop="18dp"
        android:background="@android:color/transparent"
        android:gravity="center_vertical"
        android:hint="请输入学号/手机号"
        android:text="13661330617"
        android:textColor="@color/black"
        android:textColorHint="#42000000"
        android:textSize="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginOne" />


    <View
        android:id="@+id/oneLine"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:background="#e7e7e7"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginNum" />

    <TextView
        android:id="@+id/loginPassword"
        android:layout_width="wrap_content"
        android:layout_height="57dp"
        android:gravity="center_vertical"
        android:text="确认密码"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="@+id/loginOne"
        app:layout_constraintTop_toBottomOf="@+id/oneLine" />

    <EditText
        android:id="@+id/loginPasswordInput"
        android:layout_width="0dp"
        android:layout_height="57dp"
        android:layout_marginLeft="124dp"
        android:background="@android:color/transparent"
        android:gravity="center_vertical"
        android:hint="请输入密码"
        android:text="123456"
        android:textColor="@color/black"
        android:textColorHint="#42000000"
        android:textSize="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/oneLine" />

    <View
        android:id="@+id/twoLine"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:background="#e7e7e7"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginPassword" />

    <TextView
        android:id="@+id/forgotPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="18dp"
        android:paddingBottom="18dp"
        android:text="忘记密码？"
        android:textColor="#0052d9"
        android:textSize="14dp"
        android:visibility="invisible"
        app:layout_constraintRight_toRightOf="@+id/twoLine"
        app:layout_constraintTop_toBottomOf="@+id/twoLine" />

    <TextView
        android:id="@+id/login"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:background="#bbd3fb"
        android:gravity="center"
        android:text="完成"
        android:textColor="@color/white"
        android:textSize="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/forgotPassword" />


</androidx.constraintlayout.widget.ConstraintLayout>