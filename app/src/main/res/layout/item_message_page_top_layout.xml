<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="140dp">

    <ImageView
        android:id="@+id/ivNotification"
        android:layout_width="61dp"
        android:layout_height="61dp"
        android:layout_marginTop="21dp"
        android:src="@drawable/message_page_notification"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/ivApply"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvNotification"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="系统通知"
        android:textColor="#979797"
        android:textSize="14dp"
        app:layout_constraintLeft_toLeftOf="@+id/ivNotification"
        app:layout_constraintRight_toRightOf="@+id/ivNotification"
        app:layout_constraintTop_toBottomOf="@+id/ivNotification" />

    <ImageView
        android:id="@+id/ivApply"
        android:layout_width="61dp"
        android:layout_height="61dp"
        android:layout_marginTop="21dp"
        android:src="@drawable/message_page_apply"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@+id/ivNotification"
        app:layout_constraintRight_toLeftOf="@+id/ivGood"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvApply"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="申请通知"
        android:textColor="#979797"
        android:textSize="14dp"
        app:layout_constraintLeft_toLeftOf="@+id/ivApply"
        app:layout_constraintRight_toRightOf="@+id/ivApply"
        app:layout_constraintTop_toBottomOf="@+id/ivApply" />

    <ImageView
        android:id="@+id/ivGood"
        android:layout_width="61dp"
        android:layout_height="61dp"
        android:layout_marginTop="21dp"
        android:src="@drawable/message_page_good"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@+id/ivApply"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvGood"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="系统通知"
        android:textColor="#979797"
        android:textSize="14dp"
        app:layout_constraintLeft_toLeftOf="@+id/ivGood"
        app:layout_constraintRight_toRightOf="@+id/ivGood"
        app:layout_constraintTop_toBottomOf="@+id/ivGood" />

    <View
        android:id="@+id/vLine1"
        android:layout_width="0dp"
        android:layout_height="10dp"
        android:background="#f6f8fa"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>