<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.MainActivity">

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/bottomLine"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/bottomLine"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:layout_marginBottom="50dp"
        android:background="#f5f5f5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />


    <View
        android:id="@+id/homePageGroup"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@+id/guidelineOne"
        app:layout_constraintTop_toBottomOf="@+id/bottomLine" />

    <View
        android:id="@+id/addressPageGroup"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/guidelineOne"
        app:layout_constraintRight_toRightOf="@+id/guidelineTwo"
        app:layout_constraintTop_toBottomOf="@+id/bottomLine" />

    <View
        android:id="@+id/publishPageGroup"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/guidelineTwo"
        app:layout_constraintRight_toRightOf="@+id/guidelineThree"
        app:layout_constraintTop_toBottomOf="@+id/bottomLine" />

    <View
        android:id="@+id/messagePageGroup"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/guidelineThree"
        app:layout_constraintRight_toRightOf="@+id/guidelineFour"
        app:layout_constraintTop_toBottomOf="@+id/bottomLine" />

    <View
        android:id="@+id/minePageGroup"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/guidelineFour"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bottomLine" />


    <ImageView
        android:id="@+id/homePageIcon"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:background="@mipmap/ic_launcher"
        app:layout_constraintBottom_toTopOf="@+id/homePageTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@+id/guidelineOne"
        app:layout_constraintTop_toBottomOf="@+id/bottomLine"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/homePageTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="首页"
        android:textColor="@color/black"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@+id/guidelineOne"
        app:layout_constraintTop_toBottomOf="@+id/homePageIcon"
        app:layout_constraintVertical_chainStyle="packed" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.2" />

    <ImageView
        android:id="@+id/addressPageIcon"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:background="@mipmap/ic_launcher"
        app:layout_constraintBottom_toTopOf="@+id/addressPageTitle"
        app:layout_constraintLeft_toLeftOf="@+id/guidelineOne"
        app:layout_constraintRight_toRightOf="@+id/guidelineTwo"
        app:layout_constraintTop_toBottomOf="@+id/bottomLine"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/addressPageTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="通讯录"
        android:textColor="@color/black"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/guidelineOne"
        app:layout_constraintRight_toRightOf="@+id/guidelineTwo"
        app:layout_constraintTop_toBottomOf="@+id/addressPageIcon"
        app:layout_constraintVertical_chainStyle="packed" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.4" />

    <ImageView
        android:id="@+id/publishPageIcon"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:background="@mipmap/ic_launcher"
        app:layout_constraintBottom_toTopOf="@+id/publishPageTitle"
        app:layout_constraintLeft_toLeftOf="@+id/guidelineTwo"
        app:layout_constraintRight_toRightOf="@+id/guidelineThree"
        app:layout_constraintTop_toBottomOf="@+id/bottomLine"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/publishPageTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="发布"
        android:textColor="@color/black"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/guidelineTwo"
        app:layout_constraintRight_toRightOf="@+id/guidelineThree"
        app:layout_constraintTop_toBottomOf="@+id/publishPageIcon"
        app:layout_constraintVertical_chainStyle="packed" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineThree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.6" />

    <ImageView
        android:id="@+id/messagePageIcon"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:background="@mipmap/ic_launcher"
        app:layout_constraintBottom_toTopOf="@+id/messagePageTitle"
        app:layout_constraintLeft_toLeftOf="@+id/guidelineThree"
        app:layout_constraintRight_toRightOf="@+id/guidelineFour"
        app:layout_constraintTop_toBottomOf="@+id/bottomLine"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/messagePageTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="消息"
        android:textColor="@color/black"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/guidelineThree"
        app:layout_constraintRight_toRightOf="@+id/guidelineFour"
        app:layout_constraintTop_toBottomOf="@+id/messagePageIcon"
        app:layout_constraintVertical_chainStyle="packed" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineFour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.8" />

    <ImageView
        android:id="@+id/minePageIcon"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:background="@mipmap/ic_launcher"
        app:layout_constraintBottom_toTopOf="@+id/minePageTitle"
        app:layout_constraintLeft_toLeftOf="@+id/guidelineFour"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bottomLine"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/minePageTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="我的"
        android:textColor="@color/black"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/guidelineFour"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/minePageIcon"
        app:layout_constraintVertical_chainStyle="packed" />


</androidx.constraintlayout.widget.ConstraintLayout>